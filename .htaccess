# Enable mod_rewrite
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Allow access to common web files and directory-like URLs
RewriteCond %{REQUEST_URI} !\.(js|css|epk|jpg|jpeg|png|gif|ico|svg|webp|html|xml|txt)$ [NC]
RewriteCond %{REQUEST_URI} !/$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTP_HOST} !^(www\.)?eaglercraft\.dev$ [NC]
RewriteRule . - [F,L]

# Prevent direct access to specific directories
RewriteCond %{REQUEST_URI} ^/(1\.8|1\.5|1\.3|errors)/ [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?eaglercraft\.dev [NC]
RewriteRule ^ - [R=404,L]

# Allow access only from our domain
RewriteCond %{REQUEST_URI} ^/(1\.8|1\.5|1\.3|errors)/ [NC]
RewriteCond %{HTTP_HOST} !^(www\.)?eaglercraft\.dev$ [NC]
RewriteRule ^ - [R=404,L]

# Clean URLs: Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect old URLs to new ones
RewriteRule ^news/(.*)$ https://news.eaglercraft.dev/$1 [R=301,L]

# Custom Error Pages
ErrorDocument 400 /errors/400.html
ErrorDocument 401 /errors/401.html
ErrorDocument 403 /errors/403.html
ErrorDocument 404 /errors/404.html
ErrorDocument 500 /errors/500.html
ErrorDocument 402 /errors/4xx.html
ErrorDocument 405 /errors/4xx.html
ErrorDocument 406 /errors/4xx.html
ErrorDocument 407 /errors/4xx.html
ErrorDocument 408 /errors/4xx.html
ErrorDocument 409 /errors/4xx.html
ErrorDocument 410 /errors/4xx.html
ErrorDocument 411 /errors/4xx.html
ErrorDocument 412 /errors/4xx.html
ErrorDocument 413 /errors/4xx.html
ErrorDocument 414 /errors/4xx.html
ErrorDocument 415 /errors/4xx.html
ErrorDocument 416 /errors/4xx.html
ErrorDocument 417 /errors/4xx.html
ErrorDocument 421 /errors/4xx.html
ErrorDocument 422 /errors/4xx.html
ErrorDocument 423 /errors/4xx.html
ErrorDocument 424 /errors/4xx.html
ErrorDocument 426 /errors/4xx.html
ErrorDocument 428 /errors/4xx.html
ErrorDocument 429 /errors/4xx.html
ErrorDocument 431 /errors/4xx.html
ErrorDocument 451 /errors/4xx.html
ErrorDocument 501 /errors/5xx.html
ErrorDocument 502 /errors/5xx.html
ErrorDocument 503 /errors/5xx.html
ErrorDocument 504 /errors/5xx.html
ErrorDocument 505 /errors/5xx.html
ErrorDocument 506 /errors/5xx.html
ErrorDocument 507 /errors/5xx.html
ErrorDocument 508 /errors/5xx.html
ErrorDocument 510 /errors/5xx.html
ErrorDocument 511 /errors/5xx.html

# Block access to sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Prevent script injections
RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|[|%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|[|%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ index.html [F,L]

# Prevent viewing of .htaccess and other hidden files
<FilesMatch "^\.(?!well-known)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listings
Options -Indexes

# Limit file uploads to 10MB
LimitRequestBody 10240000

# Security headers
<IfModule mod_headers.c>
    Header set Content-Security-Policy "default-src 'self'; connect-src 'self' wss:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' https://fonts.gstatic.com; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests;" env=!CF-Visitor
    Header always set X-Frame-Options "SAMEORIGIN" env=!CF-Visitor
    Header set X-Content-Type-Options "nosniff" env=!CF-Visitor
    Header set Referrer-Policy "strict-origin-when-cross-origin" env=!CF-Visitor
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), vr=()" env=!CF-Visitor
    Header set X-XSS-Protection "1; mode=block" env=!CF-Visitor
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    Header unset Server
    Header always unset X-Powered-By
    ServerSignature Off

    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=0, private, no-cache, no-store, must-revalidate"
    </FilesMatch>
    <FilesMatch "\.(css)$">
        Header set Cache-Control "max-age=0, private, no-cache, no-store, must-revalidate"
    </FilesMatch>
    <FilesMatch "\.(js)$">
        Header set Cache-Control "max-age=0, private, no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>

# MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    AddType application/x-font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/json .json
    AddType text/xml .xml
    AddType application/xml .xml
    AddType image/webp .webp
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/xml
    BrowserMatch ^Mozilla/4 gzip
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
    Header append Vary User-Agent env=!dont-vary
</IfModule>
