# Enable stuff
RewriteEngine On
ExpiresActive On
ExpiresDefault "access plus 1 hour"

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Testing no scripts and styles from the browser
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?eaglercraft\.dev [NC]
# RewriteRule ^(scripts\.js|styles/) / [L,R=302]

# Allow access to common web files and directory-like URLs
RewriteCond %{REQUEST_URI} !\.(js|css|epk|jpg|jpeg|png|gif|ico|svg|webp|html|xml|txt|mc)$ [NC]
RewriteCond %{REQUEST_URI} !/$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTP_HOST} !^(www\.)?eaglercraft\.dev$ [NC]
RewriteRule . - [F,L]

# Timestamps
# RewriteCond %{REQUEST_URI} \.(css|js|html)$ [NC]
# RewriteCond %{QUERY_STRING} !^[0-9]+$
# RewriteRule ^(.*)$ $1?%{TIME_YEAR}%{TIME_MON}%{TIME_DAY} [L,R=302,NC]

# Prevent direct access to specific directories
# RewriteCond %{REQUEST_URI} ^/(1\.8|1\.5|1\.3|Indev|Infdev)/ [NC]
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?eaglercraft\.dev [NC]
# RewriteRule ^ - [R=404,L]

# Allow access only from our domain
RewriteCond %{REQUEST_URI} ^/(1\.8|1\.5|1\.3|Indev|Infdev)/ [NC]
RewriteCond %{HTTP_HOST} !^(www\.)?eaglercraft\.dev$ [NC]
RewriteRule ^ - [R=404,L]

# Clean URLs: Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect old URLs to new ones
RewriteRule ^news/(.*)$ https://news.eaglercraft.dev/$1 [R=301,L]

# Custom Error Pages
ErrorDocument 400 /400.html
ErrorDocument 401 /401.html
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
ErrorDocument 402 /4xx.html
ErrorDocument 405 /4xx.html
ErrorDocument 406 /4xx.html
ErrorDocument 407 /4xx.html
ErrorDocument 408 /4xx.html
ErrorDocument 409 /4xx.html
ErrorDocument 410 /4xx.html
ErrorDocument 411 /4xx.html
ErrorDocument 412 /4xx.html
ErrorDocument 413 /4xx.html
ErrorDocument 414 /4xx.html
ErrorDocument 415 /4xx.html
ErrorDocument 416 /4xx.html
ErrorDocument 417 /4xx.html
ErrorDocument 421 /4xx.html
ErrorDocument 422 /4xx.html
ErrorDocument 423 /4xx.html
ErrorDocument 424 /4xx.html
ErrorDocument 426 /4xx.html
ErrorDocument 428 /4xx.html
ErrorDocument 429 /4xx.html
ErrorDocument 431 /4xx.html
ErrorDocument 451 /4xx.html
ErrorDocument 501 /5xx.html
ErrorDocument 502 /5xx.html
ErrorDocument 503 /5xx.html
ErrorDocument 504 /5xx.html
ErrorDocument 505 /5xx.html
ErrorDocument 506 /5xx.html
ErrorDocument 507 /5xx.html
ErrorDocument 508 /5xx.html
ErrorDocument 510 /5xx.html
ErrorDocument 511 /5xx.html

RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?eaglercraft\.dev [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]

# Block access to sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|[|%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|[|%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ index.html [F,L]

<FilesMatch "^\.(?!well-known)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listings
Options -Indexes

# Limit file uploads to 10MB
LimitRequestBody 10240000

<IfModule mod_headers.c>
    Header set Content-Security-Policy "default-src 'self' https:; connect-src 'self' wss:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://static.addtoany.com blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com data:; img-src 'self' data: https: blob: data: https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://static.addtoany.com https://cdnjs.cloudflare.com data:; frame-src 'self' https://news.eaglercraft.dev https://static.addtoany.com; form-action 'self'; upgrade-insecure-requests; worker-src 'self' blob:;"
    Header always set X-Frame-Options "SAMEORIGIN" env=!CF-Visitor
    Header set X-Content-Type-Options "nosniff" env=!CF-Visitor
    Header set Referrer-Policy "strict-origin-when-cross-origin" env=!CF-Visitor
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()" env=!CF-Visitor
    Header set X-XSS-Protection "1; mode=block" env=!CF-Visitor
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
    Header unset Server
    Header always unset X-Powered-By
    ServerSignature Off
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|webp)$">
        Header set Cache-Control "max-age=86400, public, must-revalidate"
    </FilesMatch>
    <FilesMatch "\.(html)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>
</IfModule>


<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    AddType application/x-font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/json .json
    AddType text/xml .xml
    AddType application/xml .xml
    AddType image/webp .webp
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/xml
    BrowserMatch ^Mozilla/4 gzip
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
    Header append Vary User-Agent env=!dont-vary
</IfModule>

<FilesMatch "\.js$">
    # Only allow JavaScript files to be accessed from your domain
    SetEnvIf Origin "^https?://(www\.)?(eaglercraft\.dev)$" origin_is=$0
    Header set Access-Control-Allow-Origin %{origin_is}e env=origin_is
    
    # Prevent direct access to JavaScript files
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?eaglercraft\.dev/ [NC]
    RewriteCond %{HTTP_HOST} !^(www\.)?eaglercraft\.dev$ [NC]
    RewriteRule \.js$ - [F,L]
    
    # Disable caching for JavaScript files
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
</FilesMatch>
